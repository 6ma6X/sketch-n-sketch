
(def redSquare (\(w x y)
  (rect "salmon" x y w w)))

(def greenSquare (\(w x y)
  (rect "yellowgreen" x y w w)))

(def yellowSquare (\(w x y)
  (rect "gold" x y w w)))

(def main
  (draw
    [(redSquare 50 80 50)
     (yellowSquare 70 70 110)
     (greenSquare 90 60 190)]))
